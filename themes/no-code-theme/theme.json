{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "white"
				},
				{
					"slug": "primary",
					"color": "#080024",
					"name": "primary"
				},
				{
					"slug": "secondary",
					"color": "#FD0000",
					"name": "secondary"
				},
				{
					"slug": "black",
					"color": "#000000",
					"name": "black"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			]
		},
		"layout": {
			"contentSize": "100vw",
			"wideSize": "100vw"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			
			"fontFamilies": [
				{
					"name": "System (Roboto, Segoe UI, Ubuntu)",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Sofia Sans",
					"slug": "sofia-sans",
					"fontFamily": "Sofia Sans, sans-serif",
					"fontFace": [
						{
							"fontFamily": "Sofia Sans",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/sofia-sans/SofiaSans.ttf" ]
						}
					]
				},
				{
					"name": "dmSerif",
					"slug": "dm-serif",
					"fontFamily": "DM Serif, serif",
					"fontFace": [
						{
							"fontFamily": "DM Serif",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/dm-serif/dmSerif.ttf" ]
						}
					]
				},
				{
					"name": "sometype Mono",
					"slug": "sometype-mono",
					"fontFamily": "sometype Mono, monospace",
					"fontFace": [
						{
							"fontFamily": "sometype Mono",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": ["file:./assets/fonts/sometype-mono/sometypeMono.ttf"]
						}
					]
				}				
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)"
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"blocks": {
			"core/paragraph": {
				"spacing": {
					"padding": {
						"top": "1.25rem",
						"right": "5vw",
						"bottom": "1.25rem",
						"left": "5vw"
					},
					"margin": {
						"top": "0.625rem",
						"bottom": "0.625rem"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sofia-sans)",
					"fontSize": "1.5rem"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"core/heading": {
				"spacing": {
					"padding": {
						"top": "0.625rem",
						"right": "5vw",
						"bottom": "0.625rem",
						"left": "5vw"
					}
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-serif)",
					"fontSize": "2.5rem"
				}
			},
			"core/list": {
				"spacing": {
					"padding": {
						"top": "0.9375rem",
						"right": "5vw",
						"bottom": "0.9375rem",
						"left": "5vw"
					},
					"margin": {
						"top": "0",
						"bottom": "0"
					}
				},
				"typography": {
					"fontSize": "1.2rem"
				},
				"border": {
					"width": "0.125rem",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)",
					"radius": "0.3125rem"
				}
			},
			"core/quote": {
				"spacing": {
					"padding": {
						"top": "1.25rem",
						"right": "5vw",
						"bottom": "1.25rem",
						"left": "5vw"
					},
					"margin": {
						"top": "0.9375rem",
						"bottom": "0.9375rem"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sofia-sans)",
					"fontSize": "1.5rem",
					"fontStyle": "italic",
					"lineHeight": "1.7"
				}
			},
					"core/code": {
						"spacing": {
					"padding": {
						"top": "0.9375rem",
						"right": "5vw",
						"bottom": "0.9375rem",
						"left": "5vw"
					},
					"margin": {
						"top": "0.625rem",
						"bottom": "0.625rem"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--white)",
					"background": "var(--wp--preset--color--black)"
				},
				"typography": {
					"fontSize": "1rem",
					"lineHeight": "1.5"
				},
				"border": {
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)",
					"radius": "5px"
				}
			},
			"core/details": {
				"spacing": {
					"padding": {
						"top": "0.9375rem",
						"right": "5vw",
						"bottom": "0.9375rem",
						"left": "5vw"
					},
					"margin": {
						"top": "0.625rem",
						"bottom": "0.625rem"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--black)",
					"background": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sometype-mono)",
					"fontSize": "1.2rem",
					"fontWeight": "400",
					"lineHeight": "1.6"
				},
				"border": {
					"width": "0.0625rem",
					"style": "dashed",
					"color": "var(--wp--preset--color--black)",
					"radius": "0.3125rem"
				}
			},
			"core/preformatted": {
				"spacing": {
					"padding": {
						"top": "1.5625rem",
						"right": "7vw",
						"bottom": "1.5625rem",
						"left": "7vw"
					},
					"margin": {
						"top": "1.25rem",
						"bottom": "1.25rem",
						"left": "auto",
						"right": "auto"
					}
					},
				"color": {
					"text": "var(--wp--preset--color--secondary)",
					"background": "var(--wp--preset--color--black)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sometype-mono)",
					"fontSize": "1.3rem",
					"lineHeight": "1.8",
					"fontWeight": "700",
					"letterSpacing": "2px",
					"textTransform": "uppercase"
				},
				"border": {
					"width": "1rem",
					"style": "double",
					"color": "var(--wp--preset--color--white)",
					"radius": " 0.75rem "
				}
			},
			"core/pullquote": {
				"spacing": {
					"padding": {
						"top": "1.5rem",
						"right": "6vw",
						"bottom": "1.5rem",
						"left": "6vw"
					},
					"margin": {
						"top": "1rem",
						"bottom": "1rem",
						"left": "auto",
						"right": "auto"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-serif)",
					"fontSize": "1.75rem",
					"lineHeight": "1.8",
					"fontWeight": "700",
					"fontStyle": "italic"
				}
			},
			"core/table": {
				"spacing": {
					"padding": {
						"top": "1.5rem",
						"right": "3vw",
						"bottom": "1.5rem",
						"left": "3vw"
					},
					"margin": {
						"top": "1rem",
						"bottom": "1rem"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--white)",
					"background": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sofia-sans)",
					"fontSize": "1.2rem",
					"lineHeight": "1.6",
					"fontWeight": "500"
				},
				"border": {
					"width": "1rem",
					"style": "solid",
					"color": "var(--wp--preset--color--secondary)",
					"radius": "1rem"
				}
			},
			"core/verse": {
				"spacing": {
					"padding": {
						"top": "2rem",
						"right": "5vw",
						"bottom": "2rem",
						"left": "5vw"
					},
					"margin": {
						"top": "1.5rem",
						"bottom": "1.5rem",
						"left": "auto",
						"right": "auto"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-serif)",
					"fontSize": "1.75rem",
					"lineHeight": "2",
					"fontWeight": "400",
					"fontStyle": "bold",
					"textAlign": "left",
					"letterSpacing": "0.05rem"
				},
				"border": {
					"width": "0.1875rem",
					"style": "double",
					"color": "var(--wp--preset--color--secondary)",
					"radius": "1rem"
				}
			},
			"core/classic": {
				"spacing": {
					"padding": {
						"top": "1.5rem",
						"right": "4vw",
						"bottom": "1.5rem",
						"left": "4vw"
					},
					"margin": {
						"top": "1rem",
						"bottom": "1rem"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--black)",
					"background": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--sofia-sans)",
					"fontSize": "1.3rem",
					"lineHeight": "1.7",
					"fontWeight": "400",
					"letterSpacing": "0.02rem"
				},
				"border": {
					"width": "0.125rem",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)",
					"radius": "0.5rem"
				}
			}

		}

	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]

}

